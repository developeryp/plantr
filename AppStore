<script>
  // =======================
  // ANPASSEN (optional)
  // =======================
  const APP_NAME = "PlantMates";

  // Dein App Store Link (so wie du ihn geschickt hast)
  const APPSTORE_URL = "https://apps.apple.com/app/apple-store/id6757171443?pt=126087453&ct=MetaAds&mt=8";

  // Optional: zweiter Button (z.B. Website). Leer lassen = aus.
  const SECOND_BUTTON_URL = ""; // z.B. "https://deine-domain.de"

  // Auto-Redirect (0 = aus)
  const AUTO_REDIRECT_SECONDS = 0; // z.B. 2 oder 3

  // Meta/UTM Parameter von der Landingpage an den App Store Link anhängen
  // (ohne Apple keys pt/ct/mt zu überschreiben)
  const FORWARD_QUERY_PARAMS = true;

  // =======================
  // LOGIK
  // =======================
  document.getElementById("appName").textContent = APP_NAME;

  const btn = document.getElementById("appstoreBtn");
  const secondBtn = document.getElementById("secondBtn");
  const autoNote = document.getElementById("autoNote");

  function buildTargetUrl() {
    const url = new URL(APPSTORE_URL);

    if (FORWARD_QUERY_PARAMS) {
      const qs = new URLSearchParams(window.location.search);

      // Apple Campaign Parameter NICHT überschreiben
      const protectedKeys = new Set(["pt", "ct", "mt"]);

      for (const [k, v] of qs.entries()) {
        if (protectedKeys.has(k)) continue;            // schützen
        if (!url.searchParams.has(k)) {
          url.searchParams.set(k, v);                  // nur ergänzen
        }
      }
    }

    return url.toString();
  }

  const target = buildTargetUrl();
  btn.href = target;

  if (SECOND_BUTTON_URL && SECOND_BUTTON_URL.trim().length > 0) {
    secondBtn.href = SECOND_BUTTON_URL;
    secondBtn.style.display = "inline-flex";
    secondBtn.textContent = "Mehr erfahren";
  }

  if (AUTO_REDIRECT_SECONDS && AUTO_REDIRECT_SECONDS > 0) {
    autoNote.style.display = "block";
    autoNote.textContent = `Du wirst in ${AUTO_REDIRECT_SECONDS} Sekunden automatisch weitergeleitet…`;
    setTimeout(() => { window.location.href = target; }, AUTO_REDIRECT_SECONDS * 1000);
  }
</script>
