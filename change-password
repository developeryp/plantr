    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>

    <script>
    (function() {
        // ---------- i18n ----------
        function detectLang() {
            // URL override: ?lang=en oder ?lang=de
            try {
                var q = new URLSearchParams(window.location.search);
                var forced = (q.get('lang') || '').toLowerCase();
                if (forced === 'de' || forced === 'en') return forced;
            } catch (e) {}

            var langs = (navigator.languages && navigator.languages.length)
                ? navigator.languages
                : [navigator.language || 'en'];

            var primary = (langs[0] || 'en').toLowerCase();
            return primary.startsWith('de') ? 'de' : 'en';
        }

        var I18N = {
            de: {
                pageTitle: "Passwort zurücksetzen - Plantr",
                title: "Neues Passwort festlegen",
                subtitle: "Gib dein neues Passwort für Plantr ein.",
                newPasswordLabel: "Neues Passwort",
                confirmPasswordLabel: "Passwort bestätigen",
                pwPlaceholder: "Mindestens 6 Zeichen",
                confirmPlaceholder: "Passwort wiederholen",
                submit: "Passwort ändern",
                changing: "Wird geändert...",
                reqTitle: "Passwort-Anforderungen:",
                reqLength: "Mindestens 6 Zeichen",
                reqLower: "Ein Kleinbuchstabe",
                reqUpper: "Ein Großbuchstabe",
                reqNumber: "Eine Zahl",
                reqSpecial: "Ein Sonderzeichen (!@#$%...)",
                reqMatch: "Passwörter stimmen überein",
                successTitle: "Passwort geändert! ✓",
                successText: "Dein Passwort wurde erfolgreich aktualisiert.<br>Alle anderen Geräte wurden abgemeldet.<br>Du kannst dich jetzt in Plantr mit deinem neuen Passwort anmelden.",
                expiredTitle: "Link abgelaufen",
                expiredText: "Dieser Link ist leider abgelaufen oder ungültig.<br>Bitte fordere in der App einen neuen Passwort-Reset-Link an.",
                errPrefix: "Fehler: ",
                unknown: "Unbekannt"
            },
            en: {
                pageTitle: "Reset password - Plantr",
                title: "Set a new password",
                subtitle: "Enter your new Plantr password.",
                newPasswordLabel: "New password",
                confirmPasswordLabel: "Confirm password",
                pwPlaceholder: "At least 6 characters",
                confirmPlaceholder: "Repeat password",
                submit: "Change password",
                changing: "Updating...",
                reqTitle: "Password requirements:",
                reqLength: "At least 6 characters",
                reqLower: "One lowercase letter",
                reqUpper: "One uppercase letter",
                reqNumber: "One number",
                reqSpecial: "One special character (!@#$%...)",
                reqMatch: "Passwords match",
                successTitle: "Password changed! ✓",
                successText: "Your password was updated successfully.<br>All other devices were signed out.<br>You can now sign in to Plantr with your new password.",
                expiredTitle: "Link expired",
                expiredText: "This link is expired or invalid.<br>Please request a new password reset link in the app.",
                errPrefix: "Error: ",
                unknown: "Unknown"
            }
        };

        var LANG = detectLang();

        function applyI18n(lang) {
            document.documentElement.lang = lang;
            if (I18N[lang] && I18N[lang].pageTitle) document.title = I18N[lang].pageTitle;

            document.querySelectorAll('[data-i18n]').forEach(function(el) {
                var key = el.getAttribute('data-i18n');
                if (I18N[lang] && I18N[lang][key] != null) el.innerHTML = I18N[lang][key];
            });

            document.querySelectorAll('[data-i18n-placeholder]').forEach(function(el) {
                var key = el.getAttribute('data-i18n-placeholder');
                if (I18N[lang] && I18N[lang][key] != null) el.setAttribute('placeholder', I18N[lang][key]);
            });
        }

        applyI18n(LANG);

        // ---------- Supabase + Reset Logic ----------
        var sbClient = window.supabase.createClient(
            'https://fsxwzcduvhmhiqfzmslh.supabase.co',
            'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImZzeHd6Y2R1dmhtaGlxZnptc2xoIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjU1NzAxODEsImV4cCI6MjA4MTE3MDE4MX0.FfYWNhE1n6llNSes1jeLwIr2blqqxEZ8rOHejgHOrtE'
        );

        var pw1 = document.getElementById('password');
        var pw2 = document.getElementById('confirmPassword');
        var btn = document.getElementById('submitBtn');
        var form = document.getElementById('resetForm');
        var errDiv = document.getElementById('errorMessage');

        function check() {
            var p = pw1.value;
            var c = pw2.value;

            var len = p.length >= 6;
            var low = /[a-z]/.test(p);
            var up = /[A-Z]/.test(p);
            var num = /[0-9]/.test(p);
            var spec = /[!@#$%^&*(),.?":{}|<>_\-+=\[\]\\\/`~]/.test(p);
            var match = p === c && c.length > 0;

            document.getElementById('reqLength').className = 'requirement' + (len ? ' valid' : '');
            document.getElementById('reqLower').className = 'requirement' + (low ? ' valid' : '');
            document.getElementById('reqUpper').className = 'requirement' + (up ? ' valid' : '');
            document.getElementById('reqNumber').className = 'requirement' + (num ? ' valid' : '');
            document.getElementById('reqSpecial').className = 'requirement' + (spec ? ' valid' : '');
            document.getElementById('reqMatch').className = 'requirement' + (match ? ' valid' : '');

            var ok = len && low && up && num && spec && match;
            btn.disabled = !ok;
            return ok;
        }

        pw1.oninput = check;
        pw2.oninput = check;
        pw1.onkeyup = check;
        pw2.onkeyup = check;

        document.getElementById('toggle1').onclick = function() {
            pw1.type = pw1.type === 'password' ? 'text' : 'password';
        };
        document.getElementById('toggle2').onclick = function() {
            pw2.type = pw2.type === 'password' ? 'text' : 'password';
        };

        form.onsubmit = async function(e) {
            e.preventDefault();
            if (!check()) return;

            errDiv.style.display = 'none';
            btn.disabled = true;
            btn.innerHTML = '<span class="loading"></span>' + I18N[LANG].changing;

            try {
                // Passwort ändern
                var res = await sbClient.auth.updateUser({ password: pw1.value });
                if (res.error) throw res.error;

                // ✅ Alle anderen Sessions ausloggen
                await sbClient.auth.signOut({ scope: 'others' });

                document.getElementById('formContainer').style.display = 'none';
                document.getElementById('successContainer').style.display = 'block';
            } catch (err) {
                errDiv.textContent = I18N[LANG].errPrefix + (err.message || I18N[LANG].unknown);
                errDiv.style.display = 'block';
                btn.disabled = false;
                btn.textContent = I18N[LANG].submit;
            }
        };

        function showExpired() {
            document.getElementById('formContainer').style.display = 'none';
            document.getElementById('expiredContainer').style.display = 'block';
        }

        (async function init() {
            var hash = window.location.hash.substring(1);
            var params = new URLSearchParams(hash);

            if (params.get('error') || params.get('error_code')) { showExpired(); return; }

            var token = params.get('access_token');
            var refresh = params.get('refresh_token');
            var type = params.get('type');

            if (!token || type !== 'recovery') { showExpired(); return; }

            try {
                var res = await sbClient.auth.setSession({ access_token: token, refresh_token: refresh });
                if (res.error) { showExpired(); return; }
            } catch (e) {
                showExpired();
            }
        })();
    })();
    </script>
</body>
</html>
