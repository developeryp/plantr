            <div class="error" id="errorMessage"></div>

            <form id="resetForm">
                <div class="form-group">
                    <label data-i18n="newPasswordLabel">Neues Passwort</label>
                    <div class="input-wrapper">
                        <input type="password" id="password" data-i18n-placeholder="pwPlaceholder" placeholder="Mindestens 6 Zeichen" required>
                        <button type="button" class="toggle-password" id="toggle1" aria-label="Toggle password visibility">
                            <svg viewBox="0 0 24 24">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8zm11 5c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm0-2c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3z"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    <label data-i18n="confirmPasswordLabel">Passwort bestätigen</label>
                    <div class="input-wrapper">
                        <input type="password" id="confirmPassword" data-i18n-placeholder="confirmPlaceholder" placeholder="Passwort wiederholen" required>
                        <button type="button" class="toggle-password" id="toggle2" aria-label="Toggle password visibility">
                            <svg viewBox="0 0 24 24">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8zm11 5c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm0-2c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3z"/>
                            </svg>
